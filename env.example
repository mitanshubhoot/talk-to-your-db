# Copy this file to .env and fill in your values

# AI Provider Configuration (Choose one or more)
# The system will try providers in the following order:

# Option 1: Hugging Face (FREE - 10,000 tokens/month)
# Get this from https://huggingface.co/settings/tokens
HUGGING_FACE_API_KEY=your_hugging_face_api_key_here

# Option 2: Cohere (FREE - 100K tokens/month)
# Get this from https://dashboard.cohere.ai/api-keys
COHERE_API_KEY=your_cohere_api_key_here

# Option 3: Text2SQL.ai (FREE - 50 queries/month)
# Get this from https://text2sql.ai/api
TEXT2SQL_API_KEY=your_text2sql_api_key_here

# Option 4: OpenAI (PAID - but most accurate)
# Get this from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Optional: Custom Database URL
# If not set, will use Docker PostgreSQL database
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/textosql_dev

# Optional: Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Optional: Backend Port
PORT=3001

# Optional: Node Environment
NODE_ENV=development

# Demo Database Configuration (Optional)
# If configured, the app will auto-connect to this database for new users
# Get a free PostgreSQL database from https://neon.tech
DEMO_DB_HOST=your_neon_host.neon.tech
DEMO_DB_PORT=5432
DEMO_DB_NAME=demo_ecommerce
DEMO_DB_USER=demo_readonly
DEMO_DB_PASSWORD=your_demo_db_password_here
DEMO_DB_SSL=true